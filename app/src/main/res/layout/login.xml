<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		android:fillViewport="true">
		<RelativeLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:padding="8dp"
				android:background="@drawable/ic_background"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/signin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="100dp"
				android:layout_marginRight="15dp"
				android:layout_marginBottom="10dp"
				android:padding="8dp"
				android:orientation="vertical"
				android:background="@drawable/background"
				android:visibility="gone">
				<TextView
					android:id="@+id/textview5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Create An New account"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#2196F3"
					android:alpha="0.8"
					android:layout_gravity="center_horizontal" />
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/textinputlayout_username"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="10dp"
					android:orientation="vertical"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
					android:hint="Username"
					app:startIconDrawable="@drawable/ic_assignment_grey"
					app:endIconMode="clear_text">
					<EditText
						android:id="@+id/edittext_username"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:textSize="16sp"
						android:textColor="#000000"
						android:textColorHint="#607D8B"
						android:singleLine="true"
						android:imeOptions="actionNext" />
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/textinputlayout_email"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="10dp"
					android:orientation="vertical"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
					android:hint="Email"
					app:startIconDrawable="@drawable/ic_account_circle_grey"
					app:endIconMode="clear_text">
					<EditText
						android:id="@+id/edittext_email"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:textSize="16sp"
						android:textColor="#000000"
						android:textColorHint="#607D8B"
						android:singleLine="true"
						android:imeOptions="actionNext" />
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/textinputlayout_password"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_margin="10dp"
					android:orientation="vertical"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
					android:hint="Password"
					app:startIconDrawable="@drawable/ic_vpn_key_grey"
					app:endIconMode="password_toggle">
					<EditText
						android:id="@+id/edittext_password"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:textSize="16sp"
						android:textColor="#000000"
						android:textColorHint="#607D8B"
						android:singleLine="true"
						android:imeOptions="actionDone" />
				</com.google.android.material.textfield.TextInputLayout>
				<Button
					android:id="@+id/button1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="30dp"
					android:layout_marginTop="20dp"
					android:layout_marginRight="30dp"
					android:padding="8dp"
					android:text="CREATE"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:background="@drawable/button" />
				<TextView
					android:id="@+id/textview9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					android:text="-- Or sign up with --"
					android:textSize="12sp"
					android:textColor="#9E9E9E"
					android:layout_gravity="center_horizontal" />
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal">
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/ic_github"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
					<ImageView
						android:id="@+id/imageview4"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="10dp"
						android:src="@drawable/ic_google_symbol"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
					<ImageView
						android:id="@+id/imageview3"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:src="@drawable/ic_facebook"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/ic_microsoft"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview_already"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="30dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="I already have an account\? Sign Up"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal|center_vertical"
					android:background="?attr/selectableItemBackground" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/signup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="100dp"
				android:layout_marginRight="15dp"
				android:layout_marginBottom="10dp"
				android:padding="8dp"
				android:orientation="vertical"
				android:background="@drawable/background">
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Welcome back"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#2196F3"
					android:alpha="0.8"
					android:layout_gravity="center_horizontal" />
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/textinputlayout_email2"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="10dp"
					android:orientation="vertical"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
					android:hint="Email"
					app:startIconDrawable="@drawable/ic_account_circle_grey"
					app:endIconMode="clear_text">
					<EditText
						android:id="@+id/edittext_email2"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textSize="16sp"
						android:textColor="#000000"
						android:textColorHint="#607D8B"
						android:singleLine="true"
						android:imeOptions="actionNext" />
				</com.google.android.material.textfield.TextInputLayout>
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/textinputlayout_password2"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_margin="10dp"
					android:orientation="vertical"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
					android:hint="Password"
					app:startIconDrawable="@drawable/ic_vpn_key_grey"
					app:endIconMode="password_toggle">
					<EditText
						android:id="@+id/edittext_password2"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textSize="16sp"
						android:textColor="#000000"
						android:textColorHint="#607D8B"
						android:singleLine="true"
						android:imeOptions="actionNext" />
				</com.google.android.material.textfield.TextInputLayout>
				<TextView
					android:id="@+id/textview_forget"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="8dp"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:text="Forgot Password"
					android:textSize="12sp"
					android:textColor="#3F51B5"
					android:background="?attr/selectableItemBackground" />
				<TextView
					android:id="@+id/textview_resend"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="8dp"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:text="Resend"
					android:textSize="12sp"
					android:textColor="#3F51B5"
					android:visibility="gone"
					android:background="?attr/selectableItemBackground" />
				<Button
					android:id="@+id/button_login"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="30dp"
					android:layout_marginTop="20dp"
					android:layout_marginRight="30dp"
					android:padding="8dp"
					android:text="LOGIN"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:background="@drawable/button" />
				<TextView
					android:id="@+id/textview10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					android:text="-- Or sign in with --"
					android:textSize="12sp"
					android:textColor="#9E9E9E"
					android:layout_gravity="center_horizontal" />
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal">
					<ImageView
						android:id="@+id/imageview5"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/ic_github"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
					<ImageView
						android:id="@+id/imageview6"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="10dp"
						android:src="@drawable/ic_google_symbol"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
					<ImageView
						android:id="@+id/imageview7"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:src="@drawable/ic_facebook"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
					<ImageView
						android:id="@+id/imageview8"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/ic_microsoft"
						android:scaleType="fitCenter"
						android:background="?attr/selectableItemBackgroundBorderless" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview_dont_have_account"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="30dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Don't have an account\? Sign Up"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal|center_vertical"
					android:background="?attr/selectableItemBackground" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/forgot_page"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="100dp"
				android:layout_marginRight="15dp"
				android:layout_marginBottom="10dp"
				android:padding="8dp"
				android:orientation="vertical"
				android:background="@drawable/background"
				android:visibility="gone">
				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Forgot Password"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#2196F3"
					android:alpha="0.8"
					android:layout_gravity="center_horizontal" />
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/textinputlayout_email3"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="10dp"
					android:orientation="vertical"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
					android:hint="Email"
					app:startIconDrawable="@drawable/ic_account_circle_grey"
					app:endIconMode="clear_text">
					<EditText
						android:id="@+id/edittext_email3"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:textSize="16sp"
						android:textColor="#000000"
						android:textColorHint="#607D8B"
						android:singleLine="true"
						android:imeOptions="actionNext" />
				</com.google.android.material.textfield.TextInputLayout>
				<TextView
					android:id="@+id/textview_get_help"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="8dp"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:text="Get Help"
					android:textSize="12sp"
					android:textColor="#3F51B5"
					android:background="?attr/selectableItemBackground" />
				<Button
					android:id="@+id/verification_button"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="30dp"
					android:layout_marginTop="20dp"
					android:layout_marginRight="30dp"
					android:padding="8dp"
					android:text="SEND VERIFICATION"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:background="@drawable/button" />
				<TextView
					android:id="@+id/textview_back_to_login"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="30dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Back To Login Page"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal|center_vertical"
					android:background="?attr/selectableItemBackground" />
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>
</LinearLayout>
